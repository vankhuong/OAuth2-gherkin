{
    "name": "vankhuong/oauth2-gherkin",
    "type": "library",
    "description": "Behavior-driven development with Gherkin language for the OAuth2 Server",
    "keywords": [
        "oauth2",
        "oauth2-server",
        "gherkin",
        "gherkin-language",
        "behavior-driven-development",
        "test-driven-development"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Khuong Ngo"
        }
    ],
    "require": {
        "league/oauth2-server": "^8.3"
    },
    "require-dev": {
        "behat/behat": "^3.10",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Features\\": "features/"
        }
    },
    "scripts": {
        "test": "vendor/bin/behat"
    }
}

